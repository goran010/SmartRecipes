<Window x:Class="RecipeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:UserControls="clr-namespace:RecipeApp.View.UserControls"
        xmlns:UI="clr-namespace:RecipeApp.View.UI"
        xmlns:Pages="clr-namespace:RecipeApp.Pages"
        Title="Recipe App" SizeToContent="WidthAndHeight"
        MinHeight="700" 
        MinWidth="900"
        MaxWidth="{x:Static SystemParameters.PrimaryScreenWidth}" Width="1054">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        <!-- Left navigation -->
        <UI:Navigation  Grid.Column="0" x:Name="Navigation" />
        
        <!-- Frame to Navigate -->
        <Frame x:Name="mainFrame" NavigationUIVisibility="Hidden" Grid.Column="1"/>
    </Grid>
</Window>


