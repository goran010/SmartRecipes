<Window x:Class="RecipeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:UserControls="clr-namespace:RecipeApp.View.UserControls"
        Title="Recipe App" SizeToContent="WidthAndHeight"
        MinHeight="300" MinWidth="400">

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Search Bar -->
            <RowDefinition Height="8*" />
            <!-- Display Container (80% of window height) -->
        </Grid.RowDefinitions>

        <!-- Search Bar -->
        <UserControls:SearchBar x:Name="searchBar" Margin="10,10,10,5"/>

        <!-- Display Container -->
        <ListBox Grid.Row="1" Name="MealsListTextBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#007ACC" BorderThickness="1" CornerRadius="3" Margin="0,0,0,5" Padding="5">
                        <TextBlock Text="{Binding}" />
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>

