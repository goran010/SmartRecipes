<Window x:Class="RecipeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Pages="clr-namespace:RecipeApp.Pages"
        Title="Recipe App" SizeToContent="WidthAndHeight"
        MinHeight="600" 
        MinWidth="900"
        MaxWidth="{x:Static SystemParameters.PrimaryScreenWidth}">

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Frame to Navigate -->
        <Frame x:Name="mainFrame" NavigationUIVisibility="Hidden" Grid.Row="1"/>

        <!-- Button to Trigger Navigation -->
        <Button Content="Navigate to Recipes Page" Click="Button_Click" Width="Auto" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>


