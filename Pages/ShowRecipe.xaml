<Page x:Class="RecipeApp.Pages.ShowRecipe"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RecipeApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShowRecipe">
    
    <Grid>
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>

    <!-- Header -->
    <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,20">
        <TextBlock Text="RecipeTitle" />
        <!-- Add any additional information or branding here -->
    </StackPanel>

    <!-- Content -->
    <StackPanel Grid.Row="1" Margin="20">
        
    </StackPanel>
    </Grid>
</Page>
