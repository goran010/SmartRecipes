<UserControl x:Class="RecipeApp.View.UI.Navigation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RecipeApp.View.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="200">
    <Grid Background="#193869">
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="85*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Logo..." Foreground="White"/>

        <StackPanel Grid.Row="1" Name="stackPanelContent">
            <Button Style="{StaticResource GridLeftButton}" Content="Home" Click="HomeButton_Click"/>
            <Button Style="{StaticResource GridLeftButton}" Content="Discover recipes" Click="DiscoverButton_Click"/>
            <Button Style="{StaticResource GridLeftButton}" Content="Add new recipe"  Click="AddNewRecipe_Click"/>
            <Button Style="{StaticResource GridLeftButton}" Content="About Us" Click="AboutUsButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
